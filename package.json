{
  "name": "cdt-installer",
  "version": "1.3.0",
  "description": "Intranet du Carreau du Temple",
  "main": "app/main.js",
  "scripts": {
    "prestart": "electron-forge make",
    "start": "node installer.js"
  },
  "keywords": [],
  "author": "Le Carreau du Temple",
  "license": "ISC",
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  },
  "devDependencies": {
    "electron-winstaller": "^5.1.0",
    "electron-prebuilt-compile": "8.2.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "name": "cdt-app",
        "icon": "assets/icons/icon.ico",
