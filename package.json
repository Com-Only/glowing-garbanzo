        "outDir": "release-builds"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "cdt-app",
            "authors": "Le Carreau du Temple",
            "description": "Intranet du Carreau du Temple"
          }
        }
      ],
      "plugins": []
    }    
